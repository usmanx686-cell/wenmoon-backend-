# ====================================
# WENMOON BACKEND CONFIGURATION
# ====================================

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
FRONTEND_URL=https://wenmoon.com
API_PREFIX=/api
LOG_LEVEL=info

# Database
MONGODB_URI=mongodb://localhost:27017/wenmoon
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
MONGO_MAX_POOL_SIZE=100
MONGO_MIN_POOL_SIZE=10

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-1234567890
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key-here-1234
SESSION_SECRET=your-session-secret-key-here-5678

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=3600000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5
SIGNUP_RATE_LIMIT_WINDOW_MS=86400000
SIGNUP_RATE_LIMIT_MAX_ATTEMPTS=3
TASK_RATE_LIMIT_WINDOW_MS=300000
TASK_RATE_LIMIT_MAX_ATTEMPTS=10

# IP Limiting
IP_LIMITING_ENABLED=true
MAX_USERS_PER_IP=5
CHECK_VPN_PROXY=true
AUTO_BLOCK_THRESHOLD=10
TEMP_BAN_DURATION=86400000
PERM_BAN_THRESHOLD=20

# CAPTCHA Configuration
CAPTCHA_ENABLED=true
CAPTCHA_PROVIDER=hcaptcha
HCAPTCHA_SITE_KEY=your-hcaptcha-site-key
HCAPTCHA_SECRET=your-hcaptcha-secret-key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET=your-recaptcha-secret-key
CAPTCHA_MIN_SCORE=0.5

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
RISK_THRESHOLD_HIGH=80
RISK_THRESHOLD_MEDIUM=50
RISK_THRESHOLD_LOW=20
AUTO_FLAG_THRESHOLD=50
AUTO_RESTRICT_THRESHOLD=70
AUTO_BLOCK_THRESHOLD=90

# IP Intelligence Services (Optional)
IPHUB_API_KEY=your-iphub-api-key
IPQUALITY_API_KEY=your-ipquality-api-key
MAXMIND_LICENSE_KEY=your-maxmind-license-key

# Email Configuration
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@wenmoon.com
EMAIL_FROM_NAME=WENMOON Team

# Admin Configuration
ADMIN_EMAIL=admin@wenmoon.com
ADMIN_PANEL_ENABLED=true
ADMIN_IP_WHITELIST=192.168.1.1,127.0.0.1,::1

# API Keys
REQUIRE_API_KEY=false
API_KEYS=your-api-key-1,your-api-key-2

# Logging
LOG_TO_FILE=true
LOG_DIRECTORY=./logs
LOG_RETENTION_DAYS=30
ERROR_LOG_FILE=error.log
COMBINED_LOG_FILE=combined.log

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
ALERTING_ENABLED=true
ALERT_EMAIL=alerts@wenmoon.com

# Task Configuration
DAILY_TASK_LIMIT=10
TASK_VERIFICATION_ENABLED=true
AUTO_APPROVE_TASKS=true

# Tokenomics
TOTAL_SUPPLY=1000000000
AIRDROP_ALLOCATION=300000000
TOKEN_DECIMALS=18
TOKEN_SYMBOL=WEN
TOKEN_NAME=WENMOON

# Whitelists
WHITELISTED_IPS=127.0.0.1,::1,192.168.1.100
WHITELISTED_EMAIL_DOMAINS=gmail.com,yahoo.com,outlook.com
BLACKLISTED_EMAIL_DOMAINS=tempmail.com,mailinator.com

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# SSL/TLS (for production)
SSL_ENABLED=false
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_CA_PATH=/path/to/ssl/ca.pem
